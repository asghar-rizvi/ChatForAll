                        <div class="privacy-option">
                            <input type="radio" name="profile_visibility" id="connections">
                            <label for="connections">
                                <div class="privacy-option-title">Connections Only</div>
                                <div class="privacy-option-desc">Only your connections</div>
                            </label>
                        </div>
                        <div class="privacy-option">
                            <input type="radio" name="profile_visibility" id="private">
                            <label for="private">
                                <div class="privacy-option-title">Private</div>
                                <div class="privacy-option-desc">Only you</div>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="privacy-item">
                    <div class="privacy-title">
                        <i class="fas fa-search"></i>
                        <span>Search Visibility</span>
                    </div>
                    <div class="privacy-options">
                        <div class="privacy-option">
                            <input type="radio" name="search_visibility" id="search_public" checked>
                            <label for="search_public">
                                <div class="privacy-option-title">Public</div>
                                <div class="privacy-option-desc">Anyone can find you</div>
                            </label>
                        </div>
                        <div class="privacy-option">
                            <input type="radio" name="search_visibility" id="search_connections">
                            <label for="search_connections">
                                <div class="privacy-option-title">Connections Only</div>
                                <div class="privacy-option-desc">Only your connections can find you</div>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="privacy-item">
                    <div class="privacy-title">
                        <i class="fas fa-envelope"></i>
                        <span>Message Requests</span>
                    </div>
                    <div class="privacy-options">
                        <div class="privacy-option">
                            <input type="radio" name="message_requests" id="message_everyone" checked>
                            <label for="message_everyone">
                                <div class="privacy-option-title">Everyone</div>
                                <div class="privacy-option-desc">Anyone can message you</div>
                            </label>
                        </div>
                        <div class="privacy-option">
                            <input type="radio" name="message_requests" id="message_connections">
                            <label for="message_connections">
                                <div class="privacy-option-title">Connections Only</div>
                                <div class="privacy-option-desc">Only your connections can message you</div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Section (Hidden by default) -->
            <div style="display: none;">
                <div class="settings-header">
                    <h2>Account Settings</h2>
                </div>

                <div class="account-actions">
                    <div class="account-action">
                        <i class="fas fa-file-export"></i>
                        <div class="account-action-title">Export Data</div>
                        <div class="account-action-desc">Download a copy of your ChatForAll data</div>
                        <button class="btn btn-outline">Request Export</button>
                    </div>

                    <div class="account-action">
                        <i class="fas fa-language"></i>
                        <div class="account-action-title">Language</div>
                        <div class="account-action-desc">Change your preferred language</div>
                        <button class="btn btn-outline">Change</button>
                    </div>

                    <div class="account-action danger">
                        <i class="fas fa-ban"></i>
                        <div class="account-action-title">Deactivate Account</div>
                        <div class="account-action-desc">Temporarily disable your account</div>
                        <button class="btn btn-outline" style="border-color: var(--danger); color: var(--danger);">Deactivate</button>
                    </div>

                    <div class="account-action danger">
                        <i class="fas fa-trash-alt"></i>
                        <div class="account-action-title">Delete Account</div>
                        <div class="account-action-desc">Permanently delete your account</div>
                        <button class="btn btn-outline" style="border-color: var(--danger); color: var(--danger);">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab switching functionality
            const menuItems = document.querySelectorAll('.settings-menu-item');
            const contentSections = document.querySelectorAll('.settings-content > div');
            
            menuItems.forEach((item, index) => {
                item.addEventListener('click', function() {
                    // Remove active class from all menu items
                    menuItems.forEach(i => i.classList.remove('active'));
                    // Add active class to clicked item
                    this.classList.add('active');
                    
                    // Hide all content sections
                    contentSections.forEach(section => section.style.display = 'none');
                    // Show corresponding content section
                    contentSections[index].style.display = 'block';
                });
            });

            // Avatar upload preview
            const avatarInput = document.querySelector('.avatar-upload input');
            const avatarPreview = document.querySelector('.avatar-preview');
            
            avatarInput.addEventListener('change', function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        avatarPreview.src = e.target.result;
                        avatarPreview.style.transform = 'scale(1.1)';
                        setTimeout(() => {
                            avatarPreview.style.transform = 'scale(1)';
                        }, 300);
                    }
                    reader.readAsDataURL(file);
                }
            });

            // Theme selection
            const themeOptions = document.querySelectorAll('.theme-option');
            themeOptions.forEach(option => {
                option.addEventListener('click', function() {
                    themeOptions.forEach(o => o.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Pulse animation
                    this.style.animation = 'pulse 0.5s ease';
                    setTimeout(() => {
                        this.style.animation = 'none';
                    }, 500);
                });
            });

            // Switch animations
            const switches = document.querySelectorAll('.switch input');
            switches.forEach(sw => {
                sw.addEventListener('change', function() {
                    const slider = this.nextElementSibling;
                    slider.style.transform = 'scale(1.1)';
                    setTimeout(() => {
                        slider.style.transform = 'scale(1)';
                    }, 300);
                });
            });

            // Danger button hover effects
            const dangerButtons = document.querySelectorAll('.account-action.danger');
            dangerButtons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.boxShadow = '0 10px 20px rgba(214, 48, 49, 0.2)';
                });
                
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(-3px)';
                    this.style.boxShadow = 'none';
                });
            });
        });
    </script>
</body>
</html>